{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "project-id-core": ["packages/core/src"],
      "project-id-cli": ["packages/cli/src"]
    }
  },
  "include": ["packages/**/*", "examples/**/*"]
}

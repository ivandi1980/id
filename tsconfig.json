{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "project-id-core": ["packages/core/src"],
      "project-id-cli": ["packages/cli/src"]
    }
  },
  "include": ["packages/**/*", "examples/**/*"],
  "exclude": ["node_modules", "dist"]
}
